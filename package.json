{
  "name": "smart-utility-app",
  "version": "1.0.0",
  "description": "MERN stack Smart Utility Management App with South African Rands support",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-deps": "cd backend && npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/derekMgwena/smart-utility-app.git"
  },
  "author": "Derek Mgwena",
  "license": "MIT"
}